<body style="background-color: rgb(255, 255, 255);">
<section>
    <div class=" container">
    <div class="row mt-3">
        <a href="/admin/add-product" class="btn btn-success"  >Add Products</a>

        {{!-- <a href="/admin/product-offers" class="btn btn-success ">Add Offer </a> --}}
    </div>
    <table class="table table-striped mt-3" id="viewusers">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">stocks</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                {{!-- <th scope="col">Description</th> --}}
                <th scope="col">Image</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>


            </tr>
        </thead>
        <tbody>
            {{#each allproducts}}
            <tr>
                <th scope="row">{{inc @index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
                {{!-- <td>{{this.description}}</td> --}}
                <td><img style="width: 50px;height:50px" src="/product-image/{{this._id}}1.jpg"></td>
                <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-outline-primary">Edit</a></td>
                <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-outline-danger"
                        onclick="return confirm('deleting {{this._id}}')">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <button><a href="#top">scroll top</a></button>
</button>
    </div>
    </section>
    {{!-- jquery cdn --}}

    <script src="https://code.jquery.com/jquery-3.6.1.js"
        integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>

    {{!-- datatable js --}}

    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

    {{!-- data table ajax --}}
    <script>
        $(document).ready(function () {
            $.noConflict();
            $('#viewusers').DataTable();
        });
    </script>
</body>