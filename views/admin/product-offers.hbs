                <div class="container-fluid">
                </div>
                <table class="table" id="viewusers">
                    <thead class="" style="background: #191c24;">
                        <tr>
                            <th scope="col">No</th>
                            {{!-- <th scope="col">Coupen Name</th> --}}
                            <th scope="col">Product</th>
                            <th scope="col">Offer</th>
                            <th scope="col">Start</th>
                            <th scope="col">Expiry</th>
                            {{!-- <th scope="col">Percentage</th> --}}
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>

                            {{!-- <th scope="col">Status</th> --}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each prodOffers}}
                        <tr>
                            <th scope="row" class="fs-bold">{{inc @index}}</th>
                            <td>{{this.product}}</td>
                            <td>{{this.proOfferPercentage}}</td>
                            <td>{{this.starting}}</td>
                            <td>{{this.expiry}}</td>

                            <td><a href="/admin/edit-product-offer/{{this._id}}"><i class="fa fa-edit fa-2x text-dark"
                                        aria-hidden="true"></i></a></td>

                            <td class=""><a href="/admin/delete-prodOffer/{{this._id}}"><i
                                        class="fa fa-trash fa-3x text-secondary" aria-hidden="true"
                                        onclick="return confirm('Are you sure want to Delete {{this.name}} Category')"></i></a>
                            </td>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
