                                        <form action="/admin/product-offers" id="productPage" method="post">
                                            {{#if proOfferExist}}
                                            <div class="alert alert-danger" role="alert">
                                                A offer for this product already Exist!
                                            </div>
                                            {{/if}}
                                            <div class="form-group first">
                                                <label for="proList" class="text-dark">Product List</label>
                                                <input list="products" name="product" class="form-control"
                                                    autocomplete="off" id="product">
                                                <datalist id="products">
                                                    {{#each allProducts}}
                                                    <option value="{{this.name}}">
                                                        {{/each}}
                                                </datalist>
                                                {{#if proErr}}
                                                <p class="text-center text-danger">{{proErr}}</p>
                                                {{/if}}
                                                <label class="pt-4 text-dark">Starting Date</label>
                                                <input type="Date" class="form-control" required name="starting"
                                                    id="str">
                                                <label class="pt-4 text-dark">Expiry Date</label>
                                                <input type="Date" class="form-control" required name="expiry" id="exp">
                                                <label class="pt-4 text-dark">Offer Percentage</label>
                                                <input type="text" onkeypress="return isNumber(event)" min="1" max="95"
                                                    class="form-control" required name="proOfferPercentage">
                                            </div>
                                            <input type="submit" value="Add" id="prosub"
