<div class="page-header text-center" style="background-image: url('/assets/images/page-header-bg.jpg')">
    <div class="container">
        <h1 class="page-title">Order Details</h1>
    </div><!-- End .container -->
</div><!-- End .page-header -->
<nav aria-label="breadcrumb" class="breadcrumb-nav">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/orders">orders</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="#">order-details</a></li>
        </ol>
    </div><!-- End .container -->
</nav>
<div class="container">
    <div class="row">
        <div class="col-12 col-lg-12 d-flex align-items-center ">
            <div class="card-body p-4 p-lg-5 text-black d-flex">
                {{#each products}}
                <div class="p-3">
                    <div class="card" style="width:200px;height: 400px;  border: 2px, solid, black">
                        <img class="card-img-top" src="/product-image/{{this.product._id}}1.jpg" alt="Card image"
                            style="width:100%">
                        <div class="card-body" style="height: ;">
                            <h4 class="card-title">{{this.product.name}}</h4>
                            <p class="card-text fs-30px"><i
                                    class="fa fa-light fa-indian-rupee-sign"></i>{{this.product.price}}
                            </p>
                            <p class="cart-text">Quantity: {{this.quantity}}</p>
                            <p class="card-text">{{this.description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
