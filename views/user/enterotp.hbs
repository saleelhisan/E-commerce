<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
	style="background-image: url('/assets/images/backgrounds/login-bg.jpg')">
	<div class="container">
		<div class="form-box">
			<div class="form-tab">
				<ul class="nav nav-pills nav-fill" role="tablist">
					<li class="nav-item">
						<a class="nav-link" id="signin-tab-2" href="/signup" role="tab"
							aria-controls="signin-2">Signup</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active" id="register-tab-2" data-toggle="tab" href="/login" role="tab"
							aria-controls="register-2" aria-selected="true">Login</a>
					</li>
				</ul>
				<div class="tab-content">
					<div class="tab-pane fade show active" id="register-2" role="tabpanel"
						aria-labelledby="register-tab-2">
						<form action="/enterotp" method="post">
							{{#if invalidOtpError}}
							<div class="alert alert-danger text-center">
								<strong>Invalid OTP</strong>
							</div>
							{{/if}}
							{{#if forgotPassword}}
							<div class="alert alert-success text-center">
								<strong>Please change your password after this</strong>
							</div>
							{{/if}}
							<div class="form-group">
								<input type="text" class="form-control" value="{{phone}}" id="register-email-2"
									name="phone" hidden required>
							</div>
							<div class="form-group">
								<label for="register-email-2">Enter your 6 digit OTP</label>
								<input type="text" class="form-control" id="register-email-2" name="otp" required>
							</div>
							<div class="d-flex justify-content-center">
								<button type="submit" class="btn btn-outline-primary-2 ">
									<span>Submit</span>
									<i class="icon-long-arrow-right"></i>
								</button>
							</div>

					</div><!-- End .form-footer -->
					</form>
				</div><!-- .End .tab-pane -->
			</div><!-- End .tab-content -->
		</div><!-- End .form-tab -->
	</div><!-- End .form-box -->
</div><!-- End .container -->
</div><!-- End .login-page section-bg -->