<div class="modal fade" id="signin-modal"  role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="icon-close"></i></span>
                    </button>

	<div class="container">
		<div class="form-box">
			<div class="form-tab">
				<ul class="nav nav-pills nav-fill" role="tablist">
					<li class="nav-item">
						<a class="nav-link" id="signin-tab-2" href="/signup" role="tab"
							aria-controls="signin-2">Signup</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active" id="register-tab-2" data-toggle="tab" href="/login" role="tab"
							aria-controls="register-2" aria-selected="true">Login</a>
					</li>
				</ul>
				<div class="tab-content">
					<div class="tab-pane fade show active" id="register-2" role="tabpanel"
						aria-labelledby="register-tab-2">
						<form action="/login" method="post">
							{{#if blockError}}
							<div class="alert alert-danger text-center">
								<strong>{{blockError}}</strong>
							</div>
							{{/if}}
							{{#if loginError}}
							<div class="alert alert-danger text-center">
								<strong>{{loginError}}</strong>
							</div>
							{{/if}}

							<div class="form-group">
								<label for="register-email-2">Your email address *</label>
								<input type="email" class="form-control" id="register-email-2" name="email" required>
							</div><!-- End .form-group -->
							<div class="form-group">
								<label for="register-password-2">Enter Password *</label>
								<input type="password" class="form-control" id="register-email-2" name="password"
									required>
							</div>

							<div class="form-footer">
								<button type="button" class="btn btn-outline-primary-2">
									<a href="/otplogin" style="text-decoration:none"><span>OTP Login</span></a>
								</button>
								{{#if loginError}}
								<a href="/forgotPassword" style="text-decoration:none"><span>Forgot Password</span></a>
								{{/if}}
								<button type="submit" class="btn btn-outline-primary-2 ml-auto">
									<span>LOGIN</span>
									<i class="icon-long-arrow-right"></i>
								</button>

							</div><!-- End .form-footer -->
						</form>
					</div><!-- .End .tab-pane -->
				</div><!-- End .tab-content -->
			</div><!-- End .form-tab -->
		</div><!-- End .form-box -->
	</div><!-- End .container -->
